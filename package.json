{
  "name": "Arche-Launcher",
  "user": "web",
  "version": "1.0.1-pre02",
  "productName": "Arche Launcher",
  "description": "Arche Launcher",
  "main": "app/index.html",
  "author": "Luuxis",
  "window": {
    "title": "Arche update",
    "width": 400,
    "height": 500,
    "frame": false,
    "resizable": false,
    "position": "center",
    "transparent": true,
    "icon": "app/assets/images/icon/icon.png"
  },
  "chromium-args": "--enable-logging --v=1 --disable-gpu",
  "url": "http://launcheur.arche-rp.fr/{user}",
  "webkit": {
    "plugin": true
  },
  "scripts": {
    "start": "nw . --user-data-dir=./AppData/Arche-Launcher",
    "server": "npm install && node node_modules/emc-core-luuxis/utils/builder.js --v=1.12.2",
    "build:win": "npm install && build --win --x64 --mirror https://npm.taobao.org/mirrors/nwjs/ .",
    "build:mac": "npm install && build --mac --x64 --mirror https://npm.taobao.org/mirrors/nwjs/ .",
    "build:linux": "npm install && build --linux --x64 --mirror https://npm.taobao.org/mirrors/nwjs/ .",
    "build:all": "npm run build:linux && npm run build:mac && npm run build:win"
  },
  "license": "MIT",
  "build": {
    "appId": "Arche Launcher",
    "nwVersion": "0.48.4",
    "packed": true,
    "targets": [
      "zip",
      "nsis7z"
    ],
    "strippedProperties": [
      "build"
    ],
    "excludes": [
      ".gitignore",
      "node-js.bat",
      "web/**",
      "AppData/**",
      "node-v*/**",
      "test/**",
      "start.bat",
      "package-lock.json",
      "README.md"
    ],
    "outputPattern": "${NAME}-${VERSION}-${PLATFORM}",
    "win": {
      "productName": "Arche Launcher",
      "companyName": "Arche Launcher",
      "copyright": "copyright",
      "icon": "./app/assets/images/icon/icon.ico"
    },
    "mac": {
      "displayName": "Arche Launcher",
      "copyright": "copyright",
      "icon": "./app/assets/images/icon/icon.icns",
      "plistStrings": {
        "CFBundleIdentifier": "Arche Launcher",
        "CFBundleDocumentTypes": []
      }
    },
    "nsis": {
      "installDirectory": "$LOCALAPPDATA\\Programs\\${_COMPANYNAME}",
      "diffUpdaters": true
    }
  },
  "devDependencies": {
    "nw": "^0.48.4-sdk",
    "nwjs-builder-phoenix": "^1.9.3"
  },
  "dependencies": {
    "adm-zip": "^0.4.16",
    "cheerio": "^1.0.0-rc.3",
    "compressjs": "^1.0.2",
    "crypto": "^1.0.1",
    "emc-core-luuxis": "^1.0.5",
    "fs": "0.0.1-security",
    "gbxremote": "^0.2.1",
    "got": "^11.5.1",
    "iconv-lite": "^0.6.2",
    "long": "^4.0.0",
    "minimist": "^1.2.5",
    "moment": "^2.27.0",
    "node-fetch": "^2.6.1",
    "nw-autoupdater-luuxis": "^1.1.2",
    "punycode": "^2.1.1",
    "varint": "^5.0.0",
    "xml-js": "^1.6.11"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luuxis/Arche-Launcher.git"
  }
}
